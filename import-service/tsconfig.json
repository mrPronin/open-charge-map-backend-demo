{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@presentation/*": ["./src/presentation/*"],
      "@dal/*": ["./src/dal/*"],
      "@domain/*": ["./src/domain/*"]
    },
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "types": ["node"]
  }
}
