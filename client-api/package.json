{
  "name": "client-api",
  "version": "1.0.0",
  "description": "Connects to the MongoDB database to read the charging station data and serves it to clients through a /graphql endpoint, supporting relay-style pagination.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc && tsc-alias && cp src/presentation/*.graphql dist/presentation",
    "dev": "tsx watch ./src/index.ts",
    "start": "node ./dist/index.js",
    "clean": "rm -r dist/**"
  },
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "extends": [
      "next",
      "prettier"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@graphql-tools/schema": "^9.0.19",
    "@prisma/client": "^4.14.1",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.21.3",
    "inversify": "^6.0.1",
    "mongoose": "^7.1.0",
    "nodemon": "^2.0.22",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.1.1",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^19.0.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.0.5",
    "prisma": "^4.14.1",
    "tsc-alias": "^1.8.6",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  }
}
