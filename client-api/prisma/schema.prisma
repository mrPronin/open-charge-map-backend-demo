generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type PoisAddressInfo {
  id                String                 @map("_id")
  ID                Int
  AddressLine1      String?
  AddressLine2      String?
  Town              String?
  StateOrProvince   String?
  Postcode          String?
  Country           Country?
  Latitude          Float
  Longitude         Float
  ContactTelephone1 String?
  ContactTelephone2 String?
  ContactEmail      String?
  AccessComments    String?
  RelatedURL        String?
  Distance          Float?
  DistanceUnit      Int?
  Title             String?
}

type Country {
  id            String @map("_id")
  ID            Int
  ISOCode       String
  ContinentCode String?
  Title         String?
}

type ConnectionInfo {
  id               String                        @map("_id")
  ID               Int
  ConnectionType   ConnectionType?
  Reference        String? 
  StatusType       StatusType?
  Amps             Int?
  Voltage          Int?
  PowerKW          Float?
  CurrentType      CurrentType?
  Quantity         Int?
  Comments         String?
}

type ConnectionType {
  id             String   @map("_id")
  ID             Int
  FormalName     String?
  IsDiscontinued Boolean?
  IsObsolete     Boolean?
  Title          String?
}

type CurrentType {
  id    String @map("_id")
  ID    Int
  Title String?
}

type OperatorInfo {
  id                    String   @map("_id")
  ID                    Int
  WebsiteURL            String?
  Comments              String?
  PhonePrimaryContact   String?
  PhoneSecondaryContact String?
  AddressInfo           PoisAddressInfo?
  BookingURL            String?
  ContactEmail          String?
  FaultReportEmail      String?
  IsRestrictedEdit      Boolean?
  Title                 String?
}

type StatusType {
  id               String  @map("_id")
  ID               Int
  IsOperational    Boolean?
  IsUserSelectable Boolean?
  Title            String?
}

model POI {
  @@map("pois")
  id                   String            @id @map("_id")
  ID                   Int
  UUID                 String
  OperatorInfo         OperatorInfo?
  StatusType           StatusType?
  AddressInfo          PoisAddressInfo?
  Connections          ConnectionInfo[]
  DateLastStatusUpdate DateTime?          @db.Date

  @@index([DateLastStatusUpdate], map: "DateLastStatusUpdate_1")
  @@index([Connections.ConnectionType.ID], map: "Connections.ConnectionType.ID_1")
  @@index([AddressInfo.Country.ID], map: "AddressInfo.Country.ID_1")
}
